puts "Input your email:"
email = gets.chomp
user = User.find_or_create_by(email: email)

while true
  puts "What do you want to do?"
  puts "0. Create shortened URL"
  puts "1. Visit shortened URL"

  answer = gets.chomp
  if answer == "0" || answer == "1"
    break
  else
    puts "Invalid response"
  end
end

if answer == '0'
  puts "Type in your long url"
  long_url = gets.chomp

  shortened_url = ShortenedUrl.create_for_user_and_long_url!(user, long_url)
  puts "Short url is: #{shortened_url.short_url}"
  puts "Goodbye!"
else
  puts "Type in your shortened url"
  short_url = gets.chomp

  if ShortenedUrl.exists?(short_url: short_url)
    shortened_url = ShortenedUrl.where(short_url: short_url).first
    Visit.record_visit!(user, shortened_url)
    Launchy.open(shortened_url.long_url)
  else
    puts "Invalid shortened url"
  end
end
